#pragma once

#define RPUTILS_VERSION_MAJOR   @PROJECT_VERSION_MAJOR@
#define RPUTILS_VERSION_MINOR   @PROJECT_VERSION_MINOR@
#define RPUTILS_VERSION_PATCH   @PROJECT_VERSION_PATCH@

#define RPUTILS_MAKE_VERSION(major,minor,patch) \
			((major) * 0x1000000 + (minor) * 0x10000 + (patch))

#define RPUTILS_VERSION \
			RPUTILS_MAKE_VERSION(RPUTILS_VERSION_MAJOR, \
				  RPUTILS_VERSION_MINOR, RPUTILS_VERSION_PATCH)

#define RPUTILS_BEFORE_VERSION(major,minor,patch) \
			(RPUTILS_MAKE_VERSION(major,minor,patch) > RPUTILS_VERSION)

#define RPUTILS_SINCE_VERSION(major,minor,patch) \
			(!RPUTILS_BEFORE_VERSION(major,minor,patch))

#define RPUTILS_AFTER_VERSION(major,minor,patch) \
			RPUTILS_SINCE_VERSION(major,minor,patch)

