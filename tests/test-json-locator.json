{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "process",
			"command": "make",
			"args": [ "-j" ],
			"options": {
				"cwd": "${workspaceFolder}/build"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
